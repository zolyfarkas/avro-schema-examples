<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <groupId>org.spf4j.avro</groupId>
  <artifactId>avro-schema-parent</artifactId>
  <version>1.0-SNAPSHOT</version>
  <packaging>pom</packaging>
  <name>${project.artifactId}</name>
  <description>Avro schema project parent</description>
  <properties>
    <spf4j.version>8.5.6</spf4j.version>
    <avro.version>1.8.1.5p</avro.version>
    <bintray.subject>zolyfarkas</bintray.subject>
    <bintray.repo>core</bintray.repo>
    <bintray.package>avro</bintray.package>
  </properties>
  <distributionManagement>
        <repository>
            <id>bintray-zolyfarkas-core</id>
            <url>https://api.bintray.com/maven/${bintray.subject}/${bintray.repo}/${bintray.package}/;publish=1</url>
        </repository>
  </distributionManagement>

  <scm>
    <connection>scm:git:https://github.com/zolyfarkas/avro-schema-examples.git</connection>
    <developerConnection>scm:git:https://github.com/zolyfarkas/avro-schema-examples.git</developerConnection>
    <url>https://github.com/zolyfarkas/avro-schema-examples/</url>
    <tag>HEAD</tag>
  </scm>

  <build>
    <plugins>
      <plugin>
        <groupId>org.spf4j</groupId>
        <artifactId>maven-avro-schema-plugin</artifactId>
        <version>${spf4j.version}</version>
        <extensions>true</extensions>
        <dependencies>
          <dependency>
            <groupId>org.apache.avro</groupId>
            <artifactId>avro</artifactId>
            <version>${avro.version}</version>
          </dependency>
          <dependency>
            <groupId>org.apache.avro</groupId>
            <artifactId>avro-compiler</artifactId>
            <version>${avro.version}</version>
          </dependency>
        </dependencies>
      </plugin>
    </plugins>
  </build>
  <dependencies>
    <dependency>
      <groupId>org.apache.avro</groupId>
      <artifactId>avro</artifactId>
      <version>${avro.version}</version>
    </dependency>
    <dependency> <!-- necessary for zolyfarkas/avro fork -->
      <groupId>com.google.code.findbugs</groupId>
      <artifactId>jsr305</artifactId>
      <version>3.0.2</version>
    </dependency>
  </dependencies>
</project>
